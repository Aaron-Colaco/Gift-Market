 @model IEnumerable<AaronColacoAsp.NETProject.Models.Item>

@{
    ViewData["Title"] = "Index";
}
<div class="ItemsPage">
<h1>Index</h1>


<div>

<a asp-action="Create">Create New</a>




  
<form asp-action="Search" asp-controller="Items">

    <input name="SearchTerm" type="text" placeholder="Search An Item"/>
    <input type="submit" value="Search" class="btn btn-primary" maxlength="50"/>
</form>
<br />
<form asp-action="Filter" asp-controller="Items" >

    <label for="MinPrice">Min</label>
    <input style="width: 10%;" name="MinPrice" type="number" placeholder="000" max="300" min="0" /><br />
    <label for="MaxPrice">Max</label>
    <input style="width: 10%;" name="MaxPrice" type="number" placeholder="100" />        
    <input style="margin-top:-3%;"type="submit" Value ="Filter" class="btn btn-primary" max="300" min="0" />
  </form>
     <br />
    <a class="FilterButtons" asp-action="FilterByCategroy" asp-route-id=4> Pre Packed Boxes</a>
    <a class="FilterButtons"asp-action="FilterByCategroy" asp-route-id=1> Food</a>
    <a class="FilterButtons" asp-action="FilterByCategroy" asp-route-id=2> Drinks</a>
    <a class="FilterButtons" asp-action="FilterByCategroy" asp-route-id=3> Physcial Products</a>
    <a class="FilterButtons"  asp-action="Index"> See All</a>
</div>
  
 
   <div class="ItemsBox">
        
 

        @foreach (var item in Model) {




        <div class="Item">

       
      
        
             <img class="ItemImgage" src="@item.ImageURL" />
             <br /> 
                 @Html.DisplayFor(modelItem => item.Name)

                <h1> @Html.DisplayFor(modelItem => item.Price)</h1>
           
                


                <p>  @Html.DisplayFor(modelItem => item.Categorys.Name) </p>


                <p> cost to produce   @Html.DisplayFor(modelItem => item.CostToProduce) </p>





                <a asp-action="Edit" asp-route-id="@item.ItemId">Edit</a>
                <a asp-action="Details" asp-route-id="@item.ItemId">Details</a> 
                <a asp-action="Delete" asp-route-id="@item.ItemId">Delete</a>
            
        <br /> <br />
        </div>
        }

    </div>
</div>


<style>
    @@media only screen and (max-Width: 800px){
        .ItemsPage{
           
            grid-template-columns: 32% 32%;
            grid-column-gap: 3%;
            margin-left: 10%;
     
        
        }
        

    }

    @@media only screen and (min-Width: 800px) {
        .ItemsBox {
            grid-template-columns: 32% 32% 32%;
            margin-top: -35%;
            margin-left: 28%;
        }

        ItemsPage{
            display: grid;
            grid-template-columns: 20% 80%;
        }

        .FilterButtons {
            display:block;
        }
    }

.ItemsBox{
    display:grid;
        grid-column-gap: 3%;
        grid-row-gap: 4%;
}
.ItemsBox{
    width: 80%;
    height: 70%;
}



 .ItemImgage{
           height: 60%;
           width: 70%;
           
 }

 .FilterButtons{
        text-decoration:none;
        color: forestgreen;
        font-size: 2rem;
        padding-left: 3%;
    }


</style>