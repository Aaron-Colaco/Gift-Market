@model IEnumerable<AaronColacoAsp.NETProject.Models.Item>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<form asp-action="Search" asp-controller="Items">

    <input name="SearchTerm" type="text" placeholder="Search An Item"/>
   
    <input type="submit" class="btn btn-primary"/>
</form>

<form asp-action="Filter" asp-controller="Items" >

    <label for="MinPrice">Min</label>
    <input name="MinPrice" type="number" placeholder="0" />
    <label for="MinPrice">Max</label>
    <input name="MaxPrice" type="number" placeholder="100" />


  <select id="Category" name="Category">
    <option value="sweet"> sweet</option>
    <option value="drinks"> drinks </option>
    <option value="souvenirs"> souvenirs</option>
    <option value="">All</option>

    <input type="submit" class="btn btn-primary" />

    </select>
  </form>



<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CostToProduce)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImageURL)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Categorys)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CostToProduce)
            </td>
            <td>
                <img style="width: 40%; height:30%;"src="@item.ImageURL" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Categorys.CategoryId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ItemId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ItemId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ItemId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
