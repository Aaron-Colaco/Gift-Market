<script>
    function ChangeRibbion() {
        // Select all objects with the class name ribbon
        let ribbon = document.querySelectorAll(".ribbon");
        // Get the value of the ribbonColour input
        let ribbonColour = document.querySelector("#ribbonColour");

        // Loop through each ribbon object
        for (var i = 0; i < ribbon.length; i++) {
            // change the fill color of each of the ribbon objects
            ribbon[i].style.fill = ribbonColour.value;
        }
    }

    function ChangeBox() {
        // Select all objects with the class name giftBox
        let giftBox = document.querySelectorAll(".giftBox");
        // Get the value of the "boxColour" input
        let giftBoxColour = document.querySelector("#boxColour");

        // Loop through each gift box element
        for (var i = 0; i < giftBox.length; i++) {
            // Update the fill color of the gift box
            giftBox[i].style.fill = giftBoxColour.value;
        }

    }


</script>


