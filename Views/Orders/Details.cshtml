@model AaronColacoAsp.NETProject.Models.Order

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Order</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            <h6 class="Headings">OrderTime</h6>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.OrderTime)

        </dd>

        <dt class="col-sm-2">
            <h6 class="Headings">Order Price</h6>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TotalPrice)

        </dd>
        <dt class="col-sm-2">
             <h6 class="Headings">Customer Name</h6>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Customers.FullName)

        </dd>
     


      
        <dd class="col-sm-10">
            <h6 class="Headings">Dilvery Details</h6>
            @Html.DisplayFor(model => model.DeliveryAddress)
            @Html.DisplayFor(model => model.City)
            @Html.DisplayFor(model => model.PostalCode)
        </dd>
    

       
        <dd class="col-sm-10">
            <h6 class="Headings">Gift Recipient Name</h6>   @Html.DisplayFor(model => model.Gifts.giftRecipient.Name)
            <h6 class="Headings">Gift Recipient Number </h6>   @Html.DisplayFor(model => model.Gifts.giftRecipient.PhoneNumber)


            <h6 class="Headings">Gift Message</h6>   @Html.DisplayFor(model => model.Gifts.Message)
            <h6 class="Headings" >Ribbion Colour</h6>   @Html.DisplayFor(model => model.Gifts.RibbonColour)
            <h6 class="Headings">Box Colour Colour</h6>   @Html.DisplayFor(model => model.Gifts.BoxColour)



        </dd>
        

    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.OrderId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>

          <style>
              .Headings{
                  color:teal;
                  font-weight-bold;
                  font-size: 1rem;
              }
          </style>